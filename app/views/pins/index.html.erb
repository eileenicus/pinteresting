<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User</th>
      <th></th>
      <th></th>      
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td style="padding:0px;"><%= image_tag pin.image.url(:medium) %></td>
        <td style="padding:3px;"><%= pin.description %></td>        
        <td style="padding:3px;"><%= pin.user.email if pin.user %></td>
        <td style="padding:3px;"><%= link_to 'Show', pin %></td>
        <% if pin.user == current_user %>
        <td style="padding:3px;"><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td style="padding:3px;"><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path %>
<% end %>